{
  "manifest_version": 2,
  "name": "EcoCart",
  "description": "A browser extension that promotes sustainable shopping by providing information about the environmental impact of products and alternative eco-friendly options.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "EcoCart"
  },
  "images": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    "popup.html",
    "popup.js"
  ]
}
